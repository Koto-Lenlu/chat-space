.SideBar
  .SideHeader
    .SideHeader__box
      %p.SideHeader__box__name
        = current_user.name
      %ul.SideHeader__box__menu
        %li.SideHeader__box__editUser
          = link_to new_group_path(current_user) do
            = icon('fas', 'edit')
        %li.SideHeader__box__newGroup
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .Groups
    - current_user.groups.each do |group|
      .Group__wrapper
        = link_to group_messages_path(group) do
          %p.Group__groupName
            = group.name
          %p.Group__listMessage
            = group.show_last_message